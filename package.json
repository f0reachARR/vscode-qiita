{
  "name": "vscode-qiita",
  "displayName": "Qiita",
  "description": "Publish your article to Qiita",
  "version": "0.0.1",
  "publisher": "Neetshin",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "qiita.compose",
        "title": "%commads.qiita.compose.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.openItem",
        "title": "%commads.qiita.openItem.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.deleteItem",
        "title": "%commads.qiita.deleteItem.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.editTags",
        "title": "%commads.qiita.editTags.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.openItemExternal",
        "title": "%commads.qiita.openItemExternal.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.makePublic",
        "title": "%commads.qiita.makePublic.title%",
        "category": "Qiita"
      }
    ],
    "configuration": [
      {
        "title": "Qiita",
        "type": "object",
        "properties": {
          "qiita.token": {
            "type": "string",
            "description": "%configuration.qiita.token.description%"
          },
          "qiita.tweetOnCreateItem": {
            "type": "boolean",
            "default": false,
            "description": "%configuration.qiita.tweetOnCreateItem.description%"
          },
          "qiita.gistOnCreateItem": {
            "type": "boolean",
            "default": false,
            "description": "%configuration.qiita.gistOnCreateItem.description%"
          }
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "3_open"
        }
      ],
      "editor/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "z_commands"
        }
      ],
      "editor/title/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "7_modification"
        }
      ],
      "view/item/context": [
        {
          "command": "qiita.openItemExternal",
          "when": "viewItem == qiitaItems",
          "group": "navigation"
        },
        {
          "command": "qiita.openItem",
          "when": "viewItem == qiitaItems",
          "group": "1_modification"
        },
        {
          "command": "qiita.editTags",
          "when": "viewItem == qiitaItems",
          "group": "1_modification"
        },
        {
          "command": "qiita.makePublic",
          "when": "viewItem == qiitaItems",
          "group": "1_modification"
        },
        {
          "command": "qiita.deleteItem",
          "when": "viewItem == qiitaItems",
          "group": "9_deletion"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qiita",
          "title": "Qiita",
          "icon": "resources/qiita.svg"
        }
      ]
    },
    "views": {
      "qiita": [
        {
          "id": "qiitaItems",
          "name": "%views.qiita.qiitaItem%"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test",
    "test:lint": "tslint -c tslint.yml 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.10.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.8.0",
    "typescript": "^3.0.3",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "core-js": "^2.5.7",
    "fuse.js": "^3.2.1",
    "qiita-js-2": "^1.2.5",
    "vscode-nls": "^4.0.0",
    "vscode-nls-dev": "^3.2.2"
  }
}
