{
  "name": "vscode-qiita",
  "displayName": "Qiita",
  "description": "Publish your article to Qiita",
  "version": "0.0.1",
  "publisher": "Neetshin",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "qiita.createItem",
        "title": "現在編集しているMarkdownファイルをQiitaに公開します",
        "category": "Qiita"
      },
      {
        "command": "qiita.openItem",
        "title": "指定の投稿をMarkdownファイルとして開きます",
        "category": "Qiita"
      }
    ],
    "configuration": [
      {
        "title": "Qiita",
        "type": "object",
        "properties": {
          "qiita.token": {
            "type": "string",
            "description": "Qiitaのアクセストークン"
          },
          "qiita.tweetOnCreateItem": {
            "type": "boolean",
            "default": false,
            "description": "投稿を公開した際にTwitterで共有するかどうか"
          },
          "qiita.gistOnCreateItem": {
            "type": "boolean",
            "default": false,
            "description": "投稿を公開した際にGitHub Gistで共有するかどうか"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qiita",
          "title": "Qiita",
          "icon": "resources/qiita.svg"
        }
      ]
    },
    "views": {
      "qiita": [
        {
          "id": "qiitaItems",
          "name": "Qiitaの投稿"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "tslint": "^5.8.0",
    "typescript": "^3.0.3",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "core-js": "^2.5.7",
    "qiita-js-2": "^1.1.0"
  }
}
