{
  "name": "vscode-qiita",
  "displayName": "Qiita",
  "description": "Publish your article to Qiita",
  "version": "0.0.1",
  "publisher": "Neetshin",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "qiita.compose",
        "title": "Qiitaで公開",
        "category": "Qiita"
      },
      {
        "command": "qiita.openItem",
        "title": "開く",
        "category": "Qiita"
      },
      {
        "command": "qiita.deleteItem",
        "title": "削除",
        "category": "Qiita"
      },
      {
        "command": "qiita.editTags",
        "title": "タグを編集",
        "category": "Qiita"
      },
      {
        "command": "qiita.openItemExternal",
        "title": "ブラウザで表示",
        "category": "Qiita"
      }
    ],
    "configuration": [
      {
        "title": "Qiita",
        "type": "object",
        "properties": {
          "qiita.token": {
            "type": "string",
            "description": "Qiitaのアクセストークン"
          },
          "qiita.tweetOnCreateItem": {
            "type": "boolean",
            "default": false,
            "description": "投稿を公開した際にTwitterで共有するかどうか"
          },
          "qiita.gistOnCreateItem": {
            "type": "boolean",
            "default": false,
            "description": "投稿を公開した際にGitHub Gistで共有するかどうか"
          }
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "3_open"
        }
      ],
      "editor/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "z_commands"
        }
      ],
      "editor/title/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "7_modification"
        }
      ],
      "view/item/context": [
        {
          "command": "qiita.openItemExternal",
          "when": "viewItem == qiitaItems",
          "group": "navigation"
        },
        {
          "command": "qiita.openItem",
          "when": "viewItem == qiitaItems",
          "group": "1_modification"
        },
        {
          "command": "qiita.editTags",
          "when": "viewItem == qiitaItems",
          "group": "1_modification"
        },
        {
          "command": "qiita.deleteItem",
          "when": "viewItem == qiitaItems",
          "group": "9_deletion"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qiita",
          "title": "Qiita",
          "icon": "resources/qiita.svg"
        }
      ]
    },
    "views": {
      "qiita": [
        {
          "id": "qiitaItems",
          "name": "Qiitaの投稿"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "test:lint": "tslint -c tslint.yml 'src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.9.4",
    "tslint": "^5.8.0",
    "typescript": "^3.0.3",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.3.1",
    "core-js": "^2.5.7",
    "fuse.js": "^3.2.1",
    "qiita-js-2": "^1.2.0"
  }
}
