{
  "name": "vscode-qiita",
  "displayName": "VSCode Qiita",
  "description": "Qiita integration for Visual Studio Code ",
  "private": true,
  "version": "0.0.1-rc.1",
  "preview": true,
  "main": "./out/extension",
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm-run-all test:*",
    "test:mocha": "yarn run compile && node ./node_modules/vscode/bin/test",
    "test:lint": "tslint -c tslint.yml 'src/**/*.{ts,tsx}'"
  },
  "engines": {
    "vscode": "^1.27.0"
  },
  "dependencies": {
    "@types/chai": "^4.1.5",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.10.1",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "core-js": "^2.5.7",
    "fuse.js": "^3.2.1",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "qiita-js-2": "^1.2.5",
    "sinon": "^6.3.4",
    "tslint": "^5.8.0",
    "typescript": "^3.0.3",
    "vscode": "^1.1.6",
    "vscode-nls": "^4.0.0",
    "vscode-nls-dev": "^3.2.2"
  },
  "activationEvents": ["*"],
  "contributes": {
    "commands": [
      {
        "command": "qiita.compose",
        "title": "%commads.qiita.compose.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.openItem",
        "title": "%commads.qiita.openItem.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.deleteItem",
        "title": "%commads.qiita.deleteItem.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.editTags",
        "title": "%commads.qiita.editTags.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.openItemExternal",
        "title": "%commads.qiita.openItemExternal.title%",
        "category": "Qiita"
      },
      {
        "command": "qiita.makePublic",
        "title": "%commads.qiita.makePublic.title%",
        "category": "Qiita"
      }
    ],
    "configuration": [
      {
        "title": "Qiita",
        "type": "object",
        "properties": {
          "qiita.token": {
            "type": "string",
            "description": "%configuration.qiita.token.description%"
          },
          "qiita.tweetOnCreateItem": {
            "type": "boolean",
            "default": false,
            "description": "%configuration.qiita.tweetOnCreateItem.description%"
          },
          "qiita.gistOnCreateItem": {
            "type": "boolean",
            "default": false,
            "description": "%configuration.qiita.gistOnCreateItem.description%"
          }
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "3_open"
        }
      ],
      "editor/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "z_commands"
        }
      ],
      "editor/title/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "qiita.compose",
          "when": "resourceLangId == markdown",
          "group": "7_modification"
        }
      ],
      "view/item/context": [
        {
          "command": "qiita.openItemExternal",
          "when": "viewItem == qiitaItems",
          "group": "navigation"
        },
        {
          "command": "qiita.openItem",
          "when": "viewItem == qiitaItems",
          "group": "1_modification"
        },
        {
          "command": "qiita.editTags",
          "when": "viewItem == qiitaItems",
          "group": "1_modification"
        },
        {
          "command": "qiita.makePublic",
          "when": "viewItem == qiitaItems",
          "group": "1_modification"
        },
        {
          "command": "qiita.deleteItem",
          "when": "viewItem == qiitaItems",
          "group": "9_deletion"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qiita",
          "title": "Qiita",
          "icon": "resources/qiita.svg"
        }
      ]
    },
    "views": {
      "qiita": [
        {
          "id": "qiitaItems",
          "name": "%views.qiita.qiitaItem%"
        }
      ]
    }
  },
  "publisher": "Neetshin",
  "homepage": "https://github.com/neet/vscode-qiita/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/neet/vscode-qiita"
  },
  "bugs": {
    "url": "https://github.com/neet/vscode-qiita/issues"
  },
  "categories": ["Other"],
  "icon": "resources/icon.png",
  "galleryBanner": {
    "theme": "light",
    "color": "#55c500"
  }
}
